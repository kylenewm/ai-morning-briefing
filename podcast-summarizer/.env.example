# OpenAI API
OPENAI_API_KEY=your_openai_key_here

# Exa API (for AI search agent)
EXA_API_KEY=your_exa_key_here

# AssemblyAI (for podcast transcription)
ASSEMBLYAI_API_KEY=your_assemblyai_key_here

# Gmail API (optional - for newsletter fetching)
GMAIL_CREDENTIALS_PATH=gmail_credentials.json
GMAIL_TOKEN_PATH=gmail_token.pickle

# Email delivery (SMTP)
SMTP_EMAIL=your_email@gmail.com
SMTP_PASSWORD=your_gmail_app_password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
EMAIL_RECIPIENT=your_email@gmail.com

# LangSmith (optional - for agent tracing/observability)
LANGSMITH_API_KEY=your_langsmith_key_here

# Perplexity API (optional - currently disabled in favor of Exa)
PERPLEXITY_API_KEY=your_perplexity_key_here

# Database path (optional - defaults to morning_briefing.db)
DATABASE_PATH=morning_briefing.db
